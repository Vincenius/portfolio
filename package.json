{
  "name": "evelyn",
  "version": "1.0.0",
  "description": "Evelyn Template",
  "author": "Pasquale Vitiello <pasqualevitiello@gmail.com>",
  "license": "GPLv3",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/pasqualevitiello/evelyn.git"
  },
  "bugs": {
    "url": "https://bitbucket.org/pasqualevitiello/evelyn/issues"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/style.css",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
    "build:css": "run-s css:lint css:scss css:autoprefixer",
    "build:js": "webpack --mode=production",
    "build:html": "posthtml -c posthtml.json",
    "build:html-blog": "posthtml -c posthtml-blog.json",
    "build:images": "imagemin src/images/* --out-dir=dist/images",
    "build:blogimages": "imagemin src/images/blog/* --out-dir=dist/images/blog",
    "build": "run-s build:*",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "watch:html": "onchange \"src/views\" -- run-s build:html build:html-blog",
    "watch:images": "onchange \"src/images\" -- run-s build:images",
    "watch": "run-p serve watch:*"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "autoprefixer": "^9.0.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.5",
    "eslint": "^6.5.1",
    "htmlnano": "^0.2.4",
    "imagemin-cli": "^5.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "posthtml": "^0.12.0",
    "posthtml-cli": "^0.5.1",
    "posthtml-modules": "^0.4.2",
    "rimraf": "^2.5.4",
    "stylelint": "^9.4.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "main": ".eslintrc.js"
}
