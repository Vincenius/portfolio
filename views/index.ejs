<body class="is-boxed has-animations">
    <div class="body-wrap boxed-container">
        <header class="site-header">
            <div class="container">
                <div class="header-lang">
                    <a class="<%= __('EN_ACTIVE') %>" href="/en">EN</a>
                    <a class="<%= __('DE_ACTIVE') %>"href="/">DE</a>
                </div>
                <div class="site-header-inner">
                    <ul class="header-links list-reset m-0">
                        <li>
                            <a class="scroll-link" href="#" data-link="projects"><%= __('PROJECTS') %></a>
                        </li>
                        <li>
                            <a class="scroll-link" href="#" data-link="contact"><%= __('CONTACT') %></a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>

        <main>
            <section class="hero text-light text-center">
                <div class="container-sm">
                    <div class="hero-inner">
                        <img class="hero-picture" src="dist/imgs/profile.jpg"/>
                        <h1 class="hero-title h2-mobile mt-0 is-revealing">Vincent Will</h1>
                        <p class="hero-paragraph is-revealing"><%= __('SUBTITLE') %></p>
                    </div>
                </div>
            </section>

            <section id="projects" class="features-extended section">
                <div class="container">
                    <div class="features-extended-inner section-inner has-top-divider">
                        <div class="features-extended-header text-center">
                            <div class="container-sm">
                                <h2 class="section-title mt-0"><%= __('PROJECTS') %></h2>
                                <p class="section-paragraph"><%= __('PROJECTS_DESCRIPTION') %></p>
                            </div>
                        </div>
                        <div class="feature-extended">
                            <div class="feature-extended-image is-revealing">
                                <img src="dist/imgs/tram4.png" alt="Screenshot of Tram4 Website" />
                            </div>
                            <div class="feature-extended-body">
                                <h3 class="mt-0">TraM4 Band</h3>
                                <p><%= __('TRAM4_DESCRIPTION') %></p>
                                <a href="https://tram4.de/" target="_blank" rel="noopener"><%= __('PROJECTS_LINKS') %></a>
                            </div>
                        </div>
                        <div class="feature-extended">
                            <div class="feature-extended-image is-revealing">
                                <img src="dist/imgs/igem.png" alt="Screenshot of Tram4 Website" />
                            </div>
                            <div class="feature-extended-body">
                                <h3 class="mt-0">iGem HU Berlin</h3>
                                <p><%= __('IGEM_DESCRIPTION') %></p>
                                <a href="https://2019.igem.org/wiki/index.php?title=Team:Humboldt_Berlin" target="_blank" rel="noopener"><%= __('PROJECTS_LINKS') %></a>
                            </div>
                        </div>
                        <div class="feature-extended">
                            <div class="feature-extended-image is-revealing">
                                <img src="dist/imgs/bildderfrau.jpg" alt="Bild Der Frau Website" />
                            </div>
                            <div class="feature-extended-body">
                                <h3 class="mt-0">Bild der Frau Relaunch</h3>
                                <p><%= __('BDF_DESCRIPTION') %></p>
                                <a href="https://www.bildderfrau.de/" target="_blank" rel="noopener"><%= __('PROJECTS_LINKS') %></a>
                            </div>
                        </div>
                        <div class="feature-extended">
                            <div class="feature-extended-image is-revealing">
                                <img src="dist/imgs/friedhof.jpg" alt="Friedhof Weißensee Website" />
                            </div>
                            <div class="feature-extended-body">
                                <h3 class="mt-0">Friedhof Weißensee</h3>
                                <p><%= __('GRAVEYARD_DESCRIPTION') %></p>
                                <a href="http://www.friedhof-weissensee.de/" target="_blank" rel="noopener"><%= __('PROJECTS_LINKS') %></a>
                            </div>
                        </div>
                        <div class="feature-extended">
                            <div class="feature-extended-image is-revealing">
                                <img src="dist/imgs/vincenius.jpg" alt="Vincenius Art Website" />
                            </div>
                            <div class="feature-extended-body">
                                <h3 class="mt-0">Vincenius Art</h3>
                                <p><%= __('ART_DESCRIPTION') %></p>
                                <a href="https://vincenius.com/" target="_blank" rel="noopener"><%= __('PROJECTS_LINKS') %></a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section id="contact" class="contact section text-center text-light">
                <div class="container">
                    <div class="section-inner">
                        <h2 class="section-title mt-0">Kontakt</h2>
                        <form action="https://formspree.io/vincentwill@arcor.de" method="POST">
                            <div class="input-container">
                                <label for="email">E-Mail:</label>
                                <input type="email" name="email" placeholder="<%= __('EMAIL_PLACEHOLDER') %>" required/>
                            </div>

                            <div class="input-container">
                                <label for="text"><%= __('TEXT_LABEL') %></label>
                                <textarea rows="4" name="text" placeholder="<%= __('TEXT_PLACEHOLDER') %>" required></textarea>
                            </div>

                            <div class="input-container">
                                <input type="submit" value="<%= __('SUBMIT') %>" />
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </main>

        <footer class="site-footer">
            <div class="container">
                <div class="site-footer-inner">
                    <div class="brand footer-brand">
                        <a href="/">
                            <img src="dist/imgs/logo.png" alt="Vincent Will Logo"/>
                        </a>
                    </div>
                    <ul class="footer-links list-reset">
                        <li>
                            <a href="<%= __('LINK_LANGUAGE') %>privacy"><%= __('PRIVACY_TITLE') %></a>
